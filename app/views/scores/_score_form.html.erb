<div class = "container">
	<%= form_for(@score , html:{class: "form-inline", role: "form"}) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>

		<div class = "form-group-score-input1 form-group-sm">
			<table class="table table-bordered table-condensed">
		 		<tr>
		 			<th style="width: 100px">
						<label>Date:</label>
			 			<%= f.date_field :score_date, class: "form-control", placeholder: "Date" %>
					</th>
					<th style="width: 700px">
						<%= f.number_field :hc, class: "form-control", placeholder: "H/C" %>
					</th>
				</tr>
			</table>
		</div>

		<div class = "form-group-score-input2 form-group-sm">
			<table class="table table-bordered table-condensed">
				<tr>
					<th style="width: 80px">
						<label>Hole No.</label>
					</th>
					<th style="width: 40px">
						<label>Score</label>
					</th>
					<th style="width: 40px">
						<label>Putts</label>
					</th>
					<th style="width: 40px">
						<label>Fairway</label>
					</th>
					<th style="width: 40px">
						<label>Green</label>
					</td>
					<th style="width: 40px">
						<label></label>
					</td>
					<th style="width: 80px">
						<label>Hole No.</label>
					</th>
					<th style="width: 40px">
						<label>Score</label>
					</th>
					<th style="width: 40px">
						<label>Putts</label>
					</th>
					<th style="width: 40px">
						<label>Fairway</label>
					</th>
					<th style="width: 40px">
						<label>Green</label>
					</td>
				</tr>

				
				<% for i in 1..9 do %>
					<%= render partial: "score_row", locals: { f: f, i: i } %>
				<% end %>
		
			</table>
		</div>
			
		<%= f.submit "Save", class: "btn btn-large btn-primary" %>
	<% end %>
</div>

