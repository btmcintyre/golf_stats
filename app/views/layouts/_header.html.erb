<nav class="navbar navbar-default" role="navigation">
  <div class="container">
    <%= link_to "Golf Statistics", root_path, id: "logo" %>
    
    <% if signed_in? %>
      <div class="nav pull-right navbar-nav">
        <%= render 'shared/user_info' %>
      </div>
    <% end %>
    
    <div class="nav pull-left navbar-nav">
      <div class="btn-group">
        <%= link_to("Home", root_path, class: "btn btn-default navbar-btn") %>
        
        <% if signed_in? %>
          <%= link_to("My Scores", score_path(current_user), class: "btn btn-default navbar-btn") %>
          <%= link_to("Users", users_path, class: "btn btn-default navbar-btn") %>
          <div class="btn-group">
            <button class="btn btn-default navbar-btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">Account<span class="caret"></span></button>
              <ul class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="dLabel">
                <li><%= link_to "Profile", user_path(current_user) %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li><%= link_to "Course", course_path(current_user) %></li>
                <li><%= link_to "Export Scores", score_path(current_user, format: :csv) %></li>
                <li class="divider"></li>
                <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
              </ul>
            </div>
          </div>
        <% else %>
          <%= link_to("Sign in", signin_path, class: "btn btn-default navbar-btn") %> 
        <% end %>
      </div>
    </div>
  </div>
</nav>



